<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#e8e8e8"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        android:id="@+id/user_pro"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:src="@drawable/head"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="20sp"
            android:textColor="#000"
            android:text = "用户名"
            android:id="@+id/fifth_user_id"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="欢迎页"
        android:textSize="15sp"
        android:background="#fff"
        android:padding="5dp"
        android:id="@+id/welcome_button"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:text="   联系人"
        android:textSize="16sp"
        android:background="#fff"
        android:padding="5dp"
        android:drawableLeft="@drawable/fifth_contacts"
        android:id="@+id/fifth_lianxiren"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:text="   收藏"
        android:textSize="16sp"
        android:background="#fff"
        android:padding="5dp"
        android:drawableLeft="@drawable/fifth_shoucang"
        android:id="@+id/fifth_shoucang"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:text="   订阅"
        android:textSize="16sp"
        android:background="#fff"
        android:padding="5dp"
        android:id="@+id/fifth_dingyue"
        android:drawableLeft="@drawable/fifth_dingyue"
        android:layout_marginBottom="15dp"
        />
    <Button
        android:id="@+id/fifth_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:text="   设置"
        android:textSize="16sp"
        android:background="#fff"
        android:padding="5dp"
        android:drawableLeft="@drawable/fifith_setting"
        />
</LinearLayout>
