<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src ="@drawable/touxiang"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="5dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="股行天下"
            android:textSize="20sp"
            android:textColor="#000"
            android:id="@+id/fifth_subscribe_listview_adapter_title"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="大盘趋势一旦形成...."
            android:textSize="15sp"
            android:id="@+id/fifth_subscribe_listview_adapter_message"
            />
    </LinearLayout>
    <Button
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text="取消"
        android:textColor="#fff"
        android:layout_gravity="center_vertical"
        android:id="@+id/fifth_subscribe_listview_adapter_button_cancel"
        android:background="#cca79d9a"
        android:padding="5dp"
        />

</LinearLayout><!-- From: file:/E:/Firstapp/app/src/main/res/layout/fifth_subscribe_listview_adapter.xml -->