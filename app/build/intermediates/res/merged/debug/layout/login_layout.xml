<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
     >

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:text="注册"
        android:textColor="@android:color/white"
       />
    
      

    <LinearLayout
        android:id="@+id/center_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" 
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        	<LinearLayout 
        	android:id="@+id/phone_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/edittextbg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp">
			
		    <ImageView
		        android:id="@+id/image_user"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:padding="2dp"
		        android:src="@drawable/phone" />

	        <EditText
	            android:id="@+id/phone_number"
	            android:singleLine="true"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="手机号码" 
	            android:inputType="number"
	            android:textSize="15dp"
	            android:textColor="@android:color/white"/>
		</LinearLayout>
		<LinearLayout 
		    android:id="@+id/email_linearlayout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/edittextbg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp"
		    android:visibility="gone">
			
		    <ImageView
		        android:id="@+id/image_user1"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:padding="2dp"
		        android:src="@drawable/email" />

	        <EditText
	            android:id="@+id/email_or_username"
	            android:singleLine="true"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="邮箱" 
	            android:textSize="15dp"
	            android:textColor="@android:color/white"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/edittextbg"
		    android:paddingTop="3dp"
		    android:paddingBottom="3dp">
	        <ImageView 
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:padding="2dp"
		        android:src="@drawable/password"/>
	        <EditText
	            android:id="@+id/password"
	            android:singleLine="true"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:background="@null"
	            android:hint="密码"
	            android:inputType="textPassword" 
	            android:textSize="15dp"
	            android:textColor="@android:color/background_light"/>
	     </LinearLayout>

        <Button
            android:id="@+id/forget_password_button"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:text="忘记密码？"
            android:textColor="@android:color/white"
            android:textSize="10dp" />
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="@android:color/holo_blue_light"
            android:text="登     陆"
            android:textColor="@android:color/white"
            android:textSize="15dp" 
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/bottom_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
       	android:layout_alignParentBottom="true"
        >

           <Button
               android:id="@+id/wechat_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:layout_marginLeft="17dp"
       		   android:layout_marginRight="15dp"
               android:background="@drawable/wechat" />

           <Button 
               android:id="@+id/weibo_button"
               android:layout_width="wrap_content"
       		   android:layout_height="wrap_content"
       		   android:layout_marginLeft="15dp"
       		   android:layout_marginRight="15dp"
       		   android:layout_weight="1"
       		   android:background="@drawable/weibo"
               />
           <Button 
               android:id="@+id/QQ_button"
               android:layout_width="wrap_content"
       		   android:layout_height="wrap_content"
       		   android:layout_marginLeft="15dp"
       		   android:layout_marginRight="15dp"
       		   android:layout_weight="1"
       		   android:background="@drawable/qq"
               />
           <Button 
               android:id="@+id/email_button"
               android:layout_width="wrap_content"
       		   android:layout_height="wrap_content"
       		   android:layout_marginLeft="15dp"
       		   android:layout_marginRight="17dp"
       		   android:layout_weight="1"
       		   android:background="@drawable/email1"
               />
        
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_linearlayout"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#808080"
            />
        	
        <TextView 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="     其他方式登陆"
            android:textColor="@android:color/white"
            />
            <TextView 
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:background="#808080"

            />
            
           
        
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/center_linearlayout"
        android:layout_below="@+id/register_button"
        android:src="@drawable/lovestock" />

</RelativeLayout><!-- From: file:/E:/Firstapp/app/src/main/res/layout/login_layout.xml -->