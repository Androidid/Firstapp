<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:id="@+id/Pinglun_RelativeLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    >
	    <RelativeLayout 
	        android:id="@+id/one4"
	        android:layout_alignParentTop="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF"
	        >
	        <ImageView 
	            android:id="@+id/user_head_image4"
	            android:layout_width="30dp"
	            android:layout_height="30dp"
	            android:src="@drawable/tidai4"
	            android:layout_alignParentLeft="true"
	            android:layout_margin="10dp"
	            />
	        <TextView 
	             android:id="@+id/pinglun_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            
	            android:layout_marginTop="10dp"
	            android:text="用户名"
	            android:textSize="15sp"
	            android:textColor="#00619A"
	            android:layout_toRightOf="@id/user_head_image4"
	            />
	        <TextView 
	             android:id="@+id/pinglun_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="时间"
	            android:textColor="#7c7c7c"
           		android:textSize="10sp"
	            android:layout_toRightOf="@id/user_head_image4"
	            android:layout_below="@id/pinglun_user_name"
	            />
	    </RelativeLayout>
	    <TextView 
	        android:id="@+id/pinglun_content"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="内容"
	        android:textSize="18sp"
	        android:layout_below="@id/one4"
	        android:padding="10dp"
	        android:background="#FFFFFF"
	        android:layout_marginLeft="40dp"
	        />
	 </RelativeLayout>
    

</LinearLayout>
