<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout 
        android:id="@+id/one4"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView 
            android:id="@+id/user_head_image4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tidai4"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            />
        <TextView 
             android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_marginTop="13dp"
            android:text="用户名"
            android:textColor="#00619A"
            android:layout_toRightOf="@id/user_head_image4"
            />
        <LinearLayout 
            android:id="@+id/dian_zan"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#EEEEEE"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/aixintao"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="0"
                android:id="@+id/count_of_zan"/>
            
        </LinearLayout>
    </RelativeLayout>
    <TextView 
        android:id="@+id/content4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="内容"
        android:layout_below="@id/one4"
        android:layout_marginLeft="45dp"
        />
    <LinearLayout 
        android:id="@+id/zhuanfa"
        android:layout_below="@id/content4"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhuanfa_from_who"
            android:textColor="#00619A"
            android:text="转发自谁"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhuanfa_content"
            android:text="转发的内容"
            android:layout_margin="5dp"
            />
        
    </LinearLayout>
    <RelativeLayout 
        android:layout_below="@id/zhuanfa"
        android:layout_marginLeft="45dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <TextView 
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="多久之前"
            android:textColor="#7c7c7c"
            android:textSize="10sp"
            android:id="@+id/time_before4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageButton 
            android:layout_alignParentRight="true"
            android:id="@+id/dowhat4"
            android:layout_height="13dp"
            android:layout_width="18dp"
            android:background="@drawable/dowhat4"
            />
        <LinearLayout 
            android:layout_toLeftOf="@id/dowhat4"
            android:id="@+id/pinglun4"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:id="@+id/count_of_pinglun" 
                android:text="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="#00619A"
                />
            <TextView 
                android:text="评论"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="10sp"
                android:textColor="#7c7c7c"
                />
            
        </LinearLayout>
        
    </RelativeLayout>
    

</RelativeLayout>
